[run]
omit =
    */tests/*
    manage.py
    */.virtualenvs/*
    */venv/*
    config.py
    */site-packages/*
    */__init__.py
    */marshmallow_schemas.py
    run_tests.py
    */initial_data.py

[report]
omit =
    */python?.?/*
    */site-packages/*
    */venv/*
    */tests/*
    */migrations/*
    */.virtualenvs/*
    config.py
    manage.py
    */__init__.py
    */marshmallow_schemas.py
    run_tests.py
    */initial_data.py

# for some reason coverage keeps raising a missing blub file error in the src directory when generating a html report. This is a temporary solution before the root cause can be determined.
ignore_errors = True
